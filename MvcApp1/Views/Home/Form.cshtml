@model MvcApp1.Models.FormModel

@{
    ViewData["Title"] = "Form";
}

<div style="text-align:center;">
    <h3>Dane z formularza</h3>
    <div style="text-align:left;">
        @Html.DisplayNameFor(model => model.Name):          @Html.DisplayFor(model => model.Name)
        <br />
        <label>Liczba dni od daty urodzin do dziś: </label> @((DateTime.Now - Model.DateBirth).Days)
        <br />
        <label>Rok urodzenia przestepny:</label> @((DateTime.IsLeapYear(Model.DateBirth.Year)))
    </div>
</div>

<br />
<a href="/form.html">Powrót do Form (HTML)</a>
